<% if logged_in? %>
  <div class="row">
    <aside class="col-xs-12 col-md-4">
      <%= form_for(@ramenpost) do |f| %>
      　<div class="form-group">
          <%= f.label :image %>
　      　<%= f.file_field :image %> 
        </div>
        <div class="form-group">
          <%= f.label :restaurant_name, '店名' %>
          <%= f.text_field :restaurant_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :menu, 'ラーメン名' %>
          <%= f.text_field :menu, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :content, 'コメント' %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
     </aside>
    <div class="col-xs-12 col-md-8">
      <%= render 'ramenposts/ramenposts', ramenposts: @ramenposts%>
    </div>
  </div>
 <% else %>
