<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left" >
        <% if user.image? %>
         <%= image_tag(user.image.url, :size=> 50, class: "media-object img-rounded" )%>
        <% else %>
         <img class="media-object img-rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <% end %>
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>